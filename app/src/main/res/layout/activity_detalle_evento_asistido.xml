<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/borde_circle">
            <TextView
                android:id="@+id/lblNombreEventoDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Punto"
                android:gravity="center"
                android:fontFamily="@font/roboto_medium"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:layout_margin="10dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_margin="5dp"
            android:background="@drawable/solo_borde"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgFotoDetalle"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/lblNombreEventoDetalle"
                android:layout_marginTop="16dp"
                android:layout_margin="15dp"
                android:scaleType="centerCrop"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/fondo_textview">
                <TextView
                    android:id="@+id/lblLugarDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgFotoDetalle"
                    android:text="Lugar"
                    android:drawableStart="@drawable/location"
                    android:layout_margin="20dp"
                    android:drawablePadding="15dp"
                    android:layout_marginTop="8dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/fondo_textview">
                <TextView
                    android:id="@+id/lblAforoDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblLugarDetalle"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/icon"
                    android:layout_margin="20dp"
                    android:drawablePadding="15dp"
                    android:textColor="#FFFFFF"
                    android:text="Aforo"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/fondo_textview">
                <TextView
                    android:id="@+id/lblDescripcionDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblAforoDetalle"
                    android:layout_marginTop="8dp"
                    android:text="Descripción"
                    android:textSize="18sp"
                    android:drawableStart="@drawable/description"
                    android:layout_margin="20dp"
                    android:drawablePadding="15dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/roboto_medium"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/fondo_textview">
                <TextView
                    android:id="@+id/lblHorarioDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblDescripcionDetalle"
                    android:layout_marginTop="8dp"
                    android:text="Horario"
                    android:textSize="18sp"
                    android:drawableStart="@drawable/schedule"
                    android:layout_margin="20dp"
                    android:drawablePadding="15dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/roboto_medium"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/fondo_textview">
                <TextView
                    android:id="@+id/lblIntroduccionDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblHorarioDetalle"
                    android:layout_marginTop="8dp"
                    android:text="Introducción"
                    android:textSize="18sp"
                    android:drawableStart="@drawable/introduction"
                    android:layout_margin="20dp"
                    android:drawablePadding="15dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/roboto_medium"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/fondo_textview">

                <TextView
                    android:id="@+id/lblTemasDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblIntroduccionDetalle"
                    android:layout_marginTop="8dp"
                    android:text="Temas"
                    android:textSize="18sp"
                    android:drawableStart="@drawable/theme"
                    android:layout_margin="20dp"
                    android:drawablePadding="15dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/roboto_medium"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Añadir más vistas según sea necesario -->
        </LinearLayout>
    </LinearLayout>
</ScrollView>
