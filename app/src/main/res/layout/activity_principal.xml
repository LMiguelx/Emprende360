<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PrincipalActivity">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".MainActivity"
        tools:openDrawer="start">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/barra_navegacion"
                layout="@layout/barra_navegacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- Inicio de ScrollView -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="20dp"
                app:layout_constraintTop_toBottomOf="@id/barra_navegacion">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/nombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:text=""
                        android:textColor="@color/grayoscuro"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:layout_margin="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textViewEventosProximos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingTop="30dp"
                        android:text="Disfruta de tu estadia tus proximos eventos"
                        android:textColor="@color/grayoscuro"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_margin="16dp"
                        android:layout_marginTop="30dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- FrameLayout with ImageView -->
                    <LinearLayout
                        android:id="@+id/frametecsup4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="16dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/textViewEventosProximos">

                        <!-- LinearLayout with TextViews -->
                        <!-- LinearLayout with TextViews -->
                        <TextView
                            android:id="@+id/textViewDate"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:layout_gravity="start|center_vertical"
                            android:gravity="center_vertical|start"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="7dp"
                            android:paddingStart="5dp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/grayoscuro"
                            android:background="@drawable/rounded_corner_rectangle"
                            android:drawableStart="@drawable/baseline_calendar_24"
                            android:text="Fecha"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/textViewTime"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:layout_gravity="start|center_vertical"
                            android:gravity="center_vertical|start"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/grayoscuro"
                            android:background="@drawable/rounded_corner_rectangle"
                            android:drawableStart="@drawable/baseline_time_24"
                            android:text="Hora"
                            android:fontFamily="@font/roboto_medium"
                            android:paddingStart="5dp"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/clima_peru"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:layout_gravity="start|center_vertical"
                            android:gravity="center_vertical|start"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="7dp"
                            android:layout_marginStart="7dp"
                            android:textColor="@color/grayoscuro"
                            android:background="@drawable/rounded_corner_rectangle"
                            android:drawableStart="@drawable/baseline_bedtime_24"
                            android:text="10.0 Â°C AQP"
                            android:paddingStart="5dp"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="10sp" />

                    </LinearLayout>


                    <!-- CardView with ViewPager2 -->
                    <LinearLayout
                        android:id="@+id/frametecsup44"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/frametecsup4">

                        <TextView
                            android:id="@+id/txtcareventos"
                            android:layout_width="224dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:paddingStart="16dp"
                            android:text="Eventos proximos"
                            android:textColor="@color/grayoscuro"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@+id/frametecsup"
                            tools:layout_editor_absoluteX="16dp" />

                        <TextView
                            android:id="@+id/btn_ver_mas"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:layout_marginStart="12dp"
                            android:fontFamily="@font/roboto_medium"
                            android:paddingStart="16dp"
                            android:textSize="12sp"
                            android:text="Ver mas..."
                            android:layout_marginEnd="30dp"
                            android:textAlignment="viewStart"
                            android:textAllCaps="false"
                            android:textColor="#001DBC"
                            android:textStyle="italic" />
                    </LinearLayout>


                    <!-- carusel slider -->

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPagerImageSlider"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginBottom="48dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:layout_marginTop="10dp"
                        app:layout_goneMarginBottom="30dp"
                        app:layout_constraintTop_toBottomOf="@+id/frametecsup44"
                        tools:layout_editor_absoluteX="0dp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        app:layout_constraintTop_toBottomOf="@+id/viewPagerImageSlider"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
            <!-- Fin de ScrollView -->
            <FrameLayout
                android:id="@+id/frame_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="-1dp"
                tools:layout_editor_absoluteY="0dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/drawer_header"
            app:menu="@menu/activity_main_drawer" />


    </androidx.drawerlayout.widget.DrawerLayout>

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.qamar.curvedbottomnaviagtion.CurvedBottomNavigation

        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cbn_background="#7935E4"
        app:cbn_fabColor="#00FF0A"
        app:cbn_iconColor="@color/white"
        app:cbn_height="76dp"
        app:cbn_icon_size="24dp"
        app:cbn_curve_radius="26dp"
        app:cbn_selected_icon_size="48dp"
        app:cbn_selectedIconColor="@color/white"
        app:cbn_titleColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"/>
    <!-- para tapar desde fondo colocar backraund white-->
</androidx.constraintlayout.widget.ConstraintLayout>

