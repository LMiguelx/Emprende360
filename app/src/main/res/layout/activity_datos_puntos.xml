<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DatosPuntosActivity">

    <!-- First Section -->
    <LinearLayout
        android:id="@+id/firstSection"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:background="@drawable/borde_circle"
        android:padding="16dp"
        android:layout_margin="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/historiquizz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:drawableStart="@drawable/history"
                android:drawablePadding="12dp"
                android:layout_margin="2dp"
                android:text="Historial de cuestionarios"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/infopuntoscuestionarios"
                android:layout_width="match_parent"
                android:fontFamily="@font/roboto_medium"
                android:layout_height="wrap_content"
                android:text="Aca se mostrara puntos obtenidos por cuestionarios."
                android:textColor="@color/color1"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Additional TextView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/puntoscuestioanrios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Texto adicional 1"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Second Section -->
    <LinearLayout
        android:id="@+id/secondSection"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:background="@drawable/borde_circle"
        android:layout_margin="30dp"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstSection">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/historiaaistencias"
                android:layout_width="match_parent"
                android:fontFamily="@font/roboto_medium"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/attendance"
                android:drawablePadding="12dp"
                android:text="Historial de asistencias"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/infopuntosasistencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Aca se mostrara puntos obtenidos por Asistencias."
                android:textColor="@color/color1"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Additional TextView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/puntosasistencias"
                android:layout_width="match_parent"
                android:fontFamily="@font/roboto_medium"
                android:layout_height="wrap_content"
                android:text="Texto adicional 2"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
