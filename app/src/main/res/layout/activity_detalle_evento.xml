<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/borde_circle"
            android:layout_margin="5dp"            >

            <TextView
                android:id="@+id/lblNombreEventoDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:gravity="center"
                android:text="Nombre del Evento"
                android:fontFamily="@font/roboto_medium"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:layout_margin="10dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgFotoDetalle"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="15dp"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/fondo_textview">
                <TextView
                    android:id="@+id/lblLugarDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:drawableStart="@drawable/location"
                    android:drawablePadding="15dp"
                    android:text="Lugar:"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/fondo_textview">
                <TextView
                    android:id="@+id/lblAforoDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_marginTop="8dp"
                    android:text="Aforo:"
                    android:drawableStart="@drawable/icon"
                    android:drawablePadding="15dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/fondo_textview">
                <TextView
                    android:id="@+id/lblDescripcionDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Descripción:"
                    android:drawableStart="@drawable/description"
                    android:drawablePadding="15dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/fondo_textview">
                <TextView
                    android:id="@+id/lblHorarioDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Horario:"
                    android:drawableStart="@drawable/schedule"
                    android:drawablePadding="15dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/fondo_textview">
                <TextView
                    android:id="@+id/lblIntroduccionDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Introducción:"
                    android:textColor="#FFFFFF"
                    android:drawableStart="@drawable/introduction"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/fondo_textview">
                <TextView
                    android:id="@+id/lblTemasDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Temas:"
                    android:drawableStart="@drawable/theme"
                    android:drawablePadding="15dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="50dp">

            <Button
                android:id="@+id/btncuestionario"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:text="Cuestionario"
                android:fontFamily="@font/roboto_medium"
                android:background="@drawable/borde_circle"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btnregistrarse"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:text="Registrarse"
                android:fontFamily="@font/roboto_medium"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/borde_circle"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="40dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
