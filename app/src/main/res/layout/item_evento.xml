<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            app:srcCompat="@android:drawable/ic_menu_gallery"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/lblNombreEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imgFoto"
            android:layout_toRightOf="@+id/imgFoto"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Nombre Evento"/>
        <TextView
            android:id="@+id/lblLugar"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_below="@+id/lblNombreEvento"
            android:layout_toEndOf="@+id/imgFoto"
            android:layout_toRightOf="@+id/imgFoto"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:text="Lugar"/>
        <TextView
            android:id="@+id/lblHorario"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/lblLugar"
            android:layout_toEndOf="@+id/imgFoto"
            android:layout_toRightOf="@+id/imgFoto"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:text="Horario"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>

