<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lblNombreCursoDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Curso"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgFotoDetalleCurso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblNombreCursoDetalle"
            android:layout_marginTop="16dp" />


        <TextView
            android:id="@+id/lblDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgFotoDetalleCurso"
            android:layout_marginTop="16dp"
            android:text="Descripción"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lblDuración"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblDescripcion"
            android:layout_marginTop="8dp"
            android:text="Duración"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lblHorario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblDuración"
            android:layout_marginTop="8dp"
            android:text="Horario"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lblIncripciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblHorario"
            android:layout_marginTop="8dp"
            android:text="Inscripciones"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lblIntroduccionDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblIncripciones"
            android:layout_marginTop="8dp"
            android:text="Introducción"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lblNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblIntroduccionDetalle"
            android:layout_marginTop="8dp"
            android:text="Nombre"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/lblPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblNombre"
            android:layout_marginTop="8dp"
            android:text="Precio"
            android:textSize="18sp" />

        <!-- Añadir más vistas según sea necesario -->
    </RelativeLayout>
</ScrollView>