<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/lblNombreCursoDetalle"
            android:layout_width="278dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:text="Nombre del Curso"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#673AB7"
 />

        <ImageView
            android:id="@+id/imgFotoCursoDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblNombreCursoDetalle"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/lblDescripcionDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgFotoCursoDetalle"
            android:text="DESCRIPCIÓN:"
            android:layout_marginTop="16dp"
            android:textColor="#673AB7"
            android:textSize="18sp"
            android:textStyle="bold"  />

        <TextView
            android:id="@+id/lblDuracionDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblDescripcionDetalle"
            android:layout_marginTop="8dp"
            android:text="DURACIÓN:"
            android:textColor="#673AB7"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblHorarioDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblDuracionDetalle"
            android:layout_marginTop="8dp"
            android:text="HORARIO:"
            android:textColor="#673AB7"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblInscripcionDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblHorarioDetalle"
            android:layout_marginTop="8dp"
            android:text="INSCRIPCIÓN:"
            android:textColor="#673AB7"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblPrecioDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblInscripcionDetalle"
            android:layout_marginTop="8dp"
            android:text="PRECIO:"
            android:textColor="#673AB7"
            android:textSize="18sp"
            android:textStyle="bold"  />

        <TextView
            android:id="@+id/lblIntroduccionDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblPrecioDetalle"
            android:layout_marginTop="8dp"
            android:text="INTRODUCCIÓN:"
            android:textColor="#673AB7"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>
</ScrollView>
