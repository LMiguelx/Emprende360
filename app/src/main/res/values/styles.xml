<resources>
    <!-- ... otros estilos ... -->

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold|italic</item>
    </style>
    <style name="AlertDialogPersonalizado" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Estilo del texto del mensaje -->
        <item name="android:textColor">@color/black</item>
        <!-- Estilo del botón positivo -->
        <item name="android:colorAccent">@color/black</item>
        <!-- Estilo del botón negativo -->
        <item name="android:textColorSecondary">@color/black</item>
    </style>


    <!-- Define a custom style for RadioButton -->
    <style name="CustomRadioButton">
        <item name="android:button">@drawable/custom_radio_button</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>



    <!-- styles.xml -->
    <style name="CircularProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circular_progress</item>
        <item name="android:minHeight">150dp</item>
        <item name="android:maxHeight">150dp</item>
    </style>

</resources>
