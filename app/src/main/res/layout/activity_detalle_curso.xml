<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lblNombreCursoDetalle"
            android:layout_width="278dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:text="Nombre del Curso"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#673AB7"
 />

        <ImageView
            android:id="@+id/imgFotoCursoDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblNombreCursoDetalle"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/lblDescripcionDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgFotoCursoDetalle"
            android:text="Descripcion"
            android:layout_marginTop="16dp"
            android:textAllCaps="true"
            android:textColor="#673AB7"
            android:textSize="18sp"
            android:textStyle="bold"  />

        <TextView
            android:id="@+id/lblDuracionDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblDescripcionDetalle"
            android:layout_marginTop="8dp"
            android:text="Duración"
            android:textAllCaps="true"
            android:textColor="#673AB7"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblHorarioDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblDuracionDetalle"
            android:layout_marginTop="8dp"
            android:text="Horario"
            android:textAllCaps="true"
            android:textColor="#673AB7"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblInscripcionDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblHorarioDetalle"
            android:layout_marginTop="8dp"
            android:text="Inscripción"
            android:textAllCaps="true"
            android:textColor="#673AB7"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblPrecioDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblInscripcionDetalle"
            android:layout_marginTop="8dp"
            android:text="Precio"
            android:textAllCaps="true"
            android:textColor="#673AB7"
            android:textSize="18sp"
            android:textStyle="bold"  />

        <TextView
            android:id="@+id/lblIntroduccionDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblPrecioDetalle"
            android:layout_marginTop="8dp"
            android:text="Introducción"
            android:textAllCaps="true"
            android:textColor="#673AB7"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btnregistrarse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblIntroduccionDetalle"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="-9dp"
            android:background="@drawable/btn_izquierdo"
            android:text="Registrarse"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btncuestionario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblIntroduccionDetalle"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/btn_derecho"
            android:text="Cuestionario"
            android:textSize="10dp" />
    </RelativeLayout>
</ScrollView>
