<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Estilo base de la aplicación con barra de navegación -->
    <style name="Con.Nav" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">#7A46D6</item>
        <item name="colorPrimaryVariant">@color/color1</item>
        <item name="android:statusBarColor">@color/blue</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Personaliza tu tema aquí -->
    </style>

    <!-- Tema sin ActionBar -->
    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <!-- Estilo base de la aplicación sin barra de navegación -->
    <style name="Sin.Nav" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#7935E4</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Definir el nuevo tema para la pantalla de login -->
    <style name="Theme.Login" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Puedes definir otros atributos generales del tema aquí -->
    </style>

    <style name="Theme.Emprende360" parent="Base.Theme.Emprende360">
    </style>

    <!-- Estilo específico para los botones -->
    <style name="ButtonStyle.Emprende360" parent="Widget.Material3.Button">
    </style>

    <!-- Puedes definir otros estilos específicos para diferentes tipos de botones si es necesario -->
    <style name="ButtonStyle.Emprende360.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:strokeColor">@color/white</item>
    </style>

    <!-- Estilo para las animaciones de actividad de deslizamiento -->
    <style name="SliderActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
    </style>

    <!-- Estilo personalizado para el indicador activo en el BottomNavigationView -->
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/grayclaro</item>
    </style>

    <!-- Estilo base para un NavigationDrawer -->
    <style name="Base.Theme.NavigationDrawerCodelia" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#7935E4</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/color1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Estilo para un NavigationDrawer -->
    <style name="Theme.NavigationDrawerCodelia" parent="Base.Theme.NavigationDrawerCodelia" />

</resources>
