<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PrincipalActivity">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".MainActivity"
        tools:openDrawer="start">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/barra_navegacion"
                layout="@layout/barra_navegacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Inicio de ScrollView -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="20dp"
                app:layout_constraintTop_toBottomOf="@id/barra_navegacion">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/hola"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingTop="18dp"
                        android:text=""
                        android:textColor="@color/grayoscuro"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textViewEventosProximos"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="16dp"
                        android:layout_marginTop="12dp"
                        android:text="Disfruta de tu estadia"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@+id/hola" />

                    <!-- FrameLayout with ImageView -->
                    <LinearLayout
                        android:id="@+id/frametecsup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="30dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toBottomOf="@+id/textViewEventosProximos">

                        <!-- LinearLayout with TextViews -->
                        <LinearLayout
                            android:id="@+id/frametecsup4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/fecha_peru"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="06/06/2024"
                                android:drawableStart="@drawable/baseline_calendar_24"
                                android:layout_gravity="end"
                                android:textSize="12sp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="7dp" />

                            <TextView
                                android:id="@+id/hora_peru"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12:45:45 AM"
                                android:drawableStart="@drawable/baseline_time_24"
                                android:layout_gravity="end"
                                android:layout_marginTop="5dp"
                                android:textSize="12sp"
                                android:layout_marginEnd="7dp" />
                            <TextView
                                android:id="@+id/clima_peru"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10.0 Â°C Arequipa"
                                android:drawableStart="@drawable/baseline_bedtime_24"
                                android:layout_gravity="end"
                                android:textSize="12sp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="7dp" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imageview_tecsup"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:src="@drawable/tecsup_campus" />

                    </LinearLayout>


                    <!-- CardView with ViewPager2 -->
                    <LinearLayout
                        android:id="@+id/frametecsup44"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/frametecsup">
                        <TextView
                            android:id="@+id/txtcareventos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:layout_marginTop="12dp"
                            android:paddingStart="16dp"
                            android:text="Eventos proximos y/o cercas"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@+id/frametecsup"
                            tools:layout_editor_absoluteX="16dp" />

                        <TextView
                            android:id="@+id/btn_ver_mas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/roboto_medium"
                            android:paddingStart="16dp"
                            android:text="Ver mas..."
                            android:textAlignment="viewStart"
                            android:textAllCaps="false"
                            android:textColor="#001DBC"
                            android:textStyle="italic" />
                    </LinearLayout>


                    <!-- carusel slider -->

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPagerImageSlider"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginBottom="48dp"
                        android:paddingStart="80dp"
                        android:paddingEnd="80dp"
                        android:layout_margin="30dp"
                        app:layout_constraintTop_toBottomOf="@+id/frametecsup44"
                        tools:layout_editor_absoluteX="0dp" />

                    <TextView
                        android:id="@+id/titlecalendario"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/color2"
                        android:paddingStart="16dp"
                        android:text="Fechas de los cursos"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@+id/viewPagerImageSlider" />

                    <TextView
                        android:id="@+id/ejemplo_spa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="16dp"
                        android:text="Esto es ListView para mostrar fechas cursos"
                        app:layout_constraintTop_toBottomOf="@+id/titlecalendario"/>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        app:layout_constraintTop_toBottomOf="@+id/ejemplo_spa"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
            <!-- Fin de ScrollView -->

            <FrameLayout
                android:id="@+id/frame_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="-1dp"
                tools:layout_editor_absoluteY="0dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/drawer_header"
            app:menu="@menu/activity_main_drawer" />

    </androidx.drawerlayout.widget.DrawerLayout>

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.qamar.curvedbottomnaviagtion.CurvedBottomNavigation

        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cbn_background="#7935E4"
        app:cbn_fabColor="#00FF0A"
        app:cbn_iconColor="@color/white"
        app:cbn_height="76dp"
        app:cbn_icon_size="24dp"
        app:cbn_curve_radius="26dp"
        app:cbn_selected_icon_size="48dp"
        app:cbn_selectedIconColor="@color/white"
        app:cbn_titleColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"/>
    <!-- para tapar desde fondo colocar backraund white-->
</androidx.constraintlayout.widget.ConstraintLayout>

