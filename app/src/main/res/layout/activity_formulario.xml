<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormularioActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp">
        <TextView
            android:layout_width="300dp"
            android:justificationMode="inter_word"
            android:layout_height="100dp"
            android:fontFamily="@font/roboto_medium"
            android:text="¡Preparado para el éxito! Completa el último paso con tus datos y código de acceso. ¡Vamos juntos hacia el éxito!"
            android:textColor="@color/white"
            android:layout_marginTop="150dp"
            android:layout_marginStart="40dp"
            android:textSize="16dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/blue_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="380dp"
        android:layout_gravity="bottom"
        android:background="@drawable/degradado" />

    <View
        android:id="@+id/white_view"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_gravity="bottom"
        android:background="@android:color/white" />
    <ImageView
        android:id="@+id/ivCodigoQR"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:background="@drawable/rectangle"
        android:elevation="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <EditText
            android:id="@+id/etNombreCompleto"
            android:layout_width="275dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginTop="30dp"
            android:drawablePadding="15dp"
            android:drawableStart="@drawable/baseline_account_circle_24"
            android:background="@drawable/icono_sobre_textos"
            android:elevation="10dp"
            android:hint="Nombre Y Apellidos"
            android:inputType="text"
            android:paddingStart="6dp"
            android:paddingEnd="10dp"
            android:textColor="#000000"
            android:textColorHint="@color/grayclaro"
            android:textSize="14sp"/>

        <RelativeLayout
            android:layout_width="275dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/icono_sobre_textos"
            android:elevation="10dp">

            <EditText
                android:id="@+id/etSemestre"
                android:layout_width="275dp"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/icono_sobre_textos"
                android:drawableStart="@drawable/baseline_account_circle_24"
                android:drawablePadding="15dp"
                android:fontFamily="@font/roboto_medium"
                android:hint="Semestre"
                android:paddingStart="6dp"
                android:paddingEnd="10dp"
                android:textColor="#000000"
                android:textColorHint="@color/grayclaro"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/spIcono1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="250dp"
                android:elevation="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_arrow_drop_down_24"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="275dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/icono_sobre_textos"
            android:elevation="10dp">

            <EditText
                android:id="@+id/etSeccion"
                android:layout_width="275dp"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/icono_sobre_textos"
                android:drawableStart="@drawable/baseline_account_circle_24"
                android:drawablePadding="15dp"
                android:fontFamily="@font/roboto_medium"
                android:hint="Seccion"
                android:paddingStart="6dp"
                android:paddingEnd="10dp"
                android:textColor="#000000"
                android:textColorHint="@color/grayclaro"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/spIcono2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="250dp"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_arrow_drop_down_24"/>

        </RelativeLayout>

        <EditText
            android:id="@+id/etCodigoEstudiante"
            android:layout_width="275dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/roboto_medium"
            android:drawablePadding="15dp"
            android:drawableStart="@drawable/baseline_account_circle_24"
            android:background="@drawable/icono_sobre_textos"
            android:elevation="10dp"
            android:hint="Codigo Estudiante"
            android:maxLength="7"
            android:inputType="text"
            android:paddingStart="6dp"
            android:paddingEnd="10dp"
            android:textColor="#000000"
            android:textColorHint="@color/grayclaro"
            android:textSize="14sp"/>

        <RelativeLayout
            android:layout_width="275dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/icono_sobre_textos"
            android:elevation="10dp">


            <EditText
                android:id="@+id/etCarrera"
                android:layout_width="275dp"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/icono_sobre_textos"
                android:drawableStart="@drawable/baseline_account_circle_24"
                android:drawablePadding="15dp"
                android:fontFamily="@font/roboto_medium"
                android:hint="Carrera"
                android:paddingStart="6dp"
                android:paddingEnd="10dp"
                android:textColor="#000000"
                android:textColorHint="@color/grayclaro"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/spIcono3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="250dp"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_arrow_drop_down_24"/>

        </RelativeLayout>

        <EditText
            android:id="@+id/etCodigoAcceso"
            android:layout_width="275dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:drawablePadding="15dp"
            android:drawableStart="@drawable/baseline_account_circle_24"
            android:background="@drawable/icono_sobre_textos"
            android:elevation="10dp"
            android:hint="Codigo Acceso"
            android:inputType="text"
            android:paddingStart="6dp"
            android:maxLength="9"
            android:paddingEnd="10dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#000000"
            android:textColorHint="@color/grayclaro"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btnGenerar"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/circle"
            android:backgroundTint="#39B9EC"
            android:fontFamily="@font/roboto_medium"
            android:elevation="6dp"
            android:text="Empezar la aventura"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>

</FrameLayout>

