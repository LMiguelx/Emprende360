<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:padding="16dp">


        <ImageView
            android:id="@+id/iconComputerLight"
            android:layout_width="wrap_content"
            android:layout_height="135dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/computerligth"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/textHolaPapa"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="¿Listo para iniciar tu viaje hacia la innovación? ¡Ingresa tus datos y únete a nuestro pasaporte emprendedor ahora!"
            android:layout_below="@id/iconComputerLight"
            android:fontFamily="serif-monospace"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>
    </RelativeLayout>

    <View
        android:id="@+id/blue_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="375dp"
        android:layout_gravity="bottom"
        android:background="@drawable/degradado" />

    <View
        android:id="@+id/white_view"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_gravity="bottom"
        android:background="@android:color/white" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="0dp"
        android:layout_marginTop="290dp"
        android:background="@drawable/rectangle"
        android:elevation="40dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="275dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="40dp"
            android:drawableStart="@drawable/baseline_account_circle_24"
            android:drawablePadding="15dp"
            android:ems="10"
            android:elevation="10dp"
            android:hint="Correo Electrónico"
            android:textColorHint="@color/grayclaro"
            android:inputType="textEmailAddress"
            android:paddingStart="6dp"
            android:paddingEnd="10dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:background="@drawable/icono_sobre_textos"/>

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="275dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:drawablePadding="15dp"
            android:drawableStart="@drawable/baseline_screen_lock_portrait_24"
            android:background="@drawable/icono_sobre_textos"
            android:elevation="10dp"
            android:ems="10"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:paddingStart="6dp"
            android:textColor="#000000"
            android:textColorHint="@color/grayclaro"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/btnOlvidar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:text="@string/strOlvidar"
            android:textColor="@color/grayclaro"
            android:textSize="10sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/btnIngresar"
            android:layout_width="220dp"
            android:paddingStart="10dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle"
            android:backgroundTint="#39B9EC"
            android:elevation="6dp"
            android:text="Iniciar Sesión"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/icono_sobre_textos"
            android:backgroundTint="#39B9EC"
            android:paddingStart="10dp"
            android:elevation="6dp"
            android:text="Registrate"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnGoogleSignIn"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/icono_sobre_textos"
            android:backgroundTint="@color/blue"
            android:paddingStart="10dp"
            android:elevation="6dp"
            android:text="Ingresa por correo"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:drawableStart="@drawable/google" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp" />
    </LinearLayout>
</FrameLayout>
